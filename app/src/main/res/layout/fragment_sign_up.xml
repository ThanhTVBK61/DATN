<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.login.SignUpFragment">

    <LinearLayout
        android:id="@+id/llUsernameSignUp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_edittext_login"
        android:orientation="horizontal">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:src="@drawable/ic_user" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:hint="Username" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmailSignUp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/llUsernameSignUp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext_login"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_email_signup" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:hint="Email" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPasswordSignUp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/llEmailSignUp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext_login"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:hint="Password" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/llPasswordSignUp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_buttonlogin"
        android:orientation="horizontal"
        android:text="Sign up"
        android:textColor="@color/colorWhite" />

</RelativeLayout>